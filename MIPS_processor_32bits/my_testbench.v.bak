`timescale 1ns / 1ps

module my_testbench;
    reg [5:0] function_code;
    reg [2:0] ALUop;
    wire [2:0] alu_ctr;

    // Instantiate the original module
    alu_control uut (
        .alu_ctr(alu_ctr),
        .function_code(function_code),
        .ALUop(ALUop)
    );

    initial begin
        // Initialize inputs
        function_code = 6'b000000;
        ALUop = 3'b000;

        // Apply input values
        #100 function_code = 6'b000001; ALUop = 3'b001;
        #100 function_code = 6'b000010; ALUop = 3'b010;
        #100 function_code = 6'b000011; ALUop = 3'b011;
        #100 function_code = 6'b000100; ALUop = 3'b100;
        #100 function_code = 6'b000101; ALUop = 3'b101;
        #100 function_code = 6'b000110; ALUop = 3'b110;
        #100 function_code = 6'b000111; ALUop = 3'b111;
    end

    // Monitor changes on the outputs
    always @(posedge alu_ctr) begin
        $display("At time %t, output is %b", $time, alu_ctr);
    end
endmodule
